// prisma/schema.prisma
// BugLens - Visual Bug Tracking Platform
// Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum Role {
  ADMIN
  PROJECT_MANAGER
  DEVELOPER
  TESTER
}

enum TestCaseStatus {
  DRAFT
  PENDING
  PASSED
  FAILED
  BLOCKED
  SKIPPED
}

enum BugSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum BugPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum AnnotationType {
  RECTANGLE
  CIRCLE
  ARROW
  FREEHAND
}

enum AuditAction {
  CREATED
  UPDATED
  STATUS_CHANGED
  ASSIGNED
  UNASSIGNED
  COMMENTED
  ATTACHMENT_ADDED
  ANNOTATION_ADDED
  ANNOTATION_UPDATED
  ANNOTATION_DELETED
  SYNCED_TO_EXTERNAL
  EXTERNAL_SYNC
  EXTERNAL_UNLINKED
}

enum IntegrationType {
  JIRA
  TRELLO
  AZURE_DEVOPS
  SLACK
  TEAMS
}

enum NotificationChannel {
  IN_APP
  EMAIL
  SLACK
  TEAMS
}

enum JoinRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

// ============================================
// AUTHENTICATION MODELS (NextAuth)
// ============================================

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String?
  avatarUrl      String?
  emailVerified  DateTime?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  accounts          Account[]
  sessions          Session[]
  memberships       Member[]
  createdTestCases  TestCase[]               @relation("TestCaseCreator")
  assignedTestCases TestCase[]               @relation("TestCaseAssignee")
  comments          Comment[]
  auditLogs         AuditLog[]
  notifications     Notification[]
  notificationPrefs NotificationPreference[]
  joinRequests      JoinRequest[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// ORGANIZATION & MEMBERSHIP
// ============================================

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  logoUrl   String?
  settings  Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  members      Member[]
  projects     Project[]
  integrations Integration[]
  invitations  Invitation[]
  joinRequests JoinRequest[]

  @@index([slug])
}

model Member {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  role           Role     @default(TESTER)
  joinedAt       DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([organizationId])
  @@index([userId])
}

model Invitation {
  id             String   @id @default(cuid())
  email          String?  // Optional for code-based invites
  organizationId String
  role           Role     @default(TESTER)
  token          String   @unique
  inviteCode     String?  @unique // For shareable invite links
  maxUses        Int?     // Maximum number of uses (null = unlimited)
  usedCount      Int      @default(0)
  expiresAt      DateTime
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([email, organizationId])
  @@index([token])
  @@index([inviteCode])
}

model JoinRequest {
  id             String            @id @default(cuid())
  userId         String
  organizationId String
  message        String?           @db.Text
  status         JoinRequestStatus @default(PENDING)
  reviewedBy     String?
  reviewedAt     DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([organizationId])
  @@index([status])
}

// ============================================
// PROJECT HIERARCHY
// ============================================

model Project {
  id               String   @id @default(cuid())
  organizationId   String
  name             String
  description      String?
  slug             String
  code             String   @default("") // Short code for reference IDs (e.g., "BL", "PRJ")
  color            String   @default("#6366f1")
  isArchived       Boolean  @default(false)
  externalMappings Json     @default("{}") // Jira/Trello/Azure mapping
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  modules      Module[]

  @@unique([organizationId, slug])
  @@index([organizationId])
}

model Module {
  id              String   @id @default(cuid())
  projectId       String
  parentId        String?
  name            String
  description     String?
  code            String   @default("") // Short code for reference IDs (e.g., "AUTH", "USR")
  testCaseCounter Int      @default(0) // Counter for auto-generating reference IDs
  order           Int      @default(0)
  depth           Int      @default(0) // 0 = root, max 3 (4 levels total)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parent    Module?    @relation("ModuleHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children  Module[]   @relation("ModuleHierarchy")
  testCases TestCase[]

  @@index([projectId])
  @@index([parentId])
}

// ============================================
// TEST CASES & SCREENSHOTS
// ============================================

model TestCase {
  id               String         @id @default(cuid())
  moduleId         String
  creatorId        String
  assigneeId       String?
  referenceId      String? // User-defined unique ID for import/export (unique within module)
  title            String
  description      String         @db.Text
  stepsToReproduce String?        @db.Text // Free-form text
  expectedResult   String?        @db.Text
  actualResult     String?        @db.Text
  status           TestCaseStatus @default(DRAFT)
  severity         BugSeverity
  priority         BugPriority
  browserInfo      Json? // { name, version, os }
  screenSize       Json? // { width, height }
  url              String? // URL where test case applies
  externalId       String? // ID in Jira/Trello/Azure DevOps
  externalUrl      String? // URL to external issue
  externalType     IntegrationType?
  externalIds      Json? // { jira?: string, trello?: string, azureDevOps?: string }
  lastSyncedAt     DateTime?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  executedAt       DateTime? // When test was last executed

  module      Module       @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  creator     User         @relation("TestCaseCreator", fields: [creatorId], references: [id])
  assignee    User?        @relation("TestCaseAssignee", fields: [assigneeId], references: [id])
  screenshots Screenshot[]
  annotations Annotation[]
  comments    Comment[]
  auditLogs   AuditLog[]
  attachments Attachment[]

  @@unique([moduleId, referenceId]) // Unique reference ID within a module
  @@index([moduleId])
  @@index([creatorId])
  @@index([assigneeId])
  @@index([status])
  @@index([externalId])
  @@index([referenceId])
}

model Screenshot {
  id           String   @id @default(cuid())
  testCaseId   String
  title        String?
  description  String?
  originalUrl  String
  thumbnailUrl String?
  previewUrl   String?
  s3Key        String
  width        Int?
  height       Int?
  fileSize     Int?
  mimeType     String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  testCase    TestCase     @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  annotations Annotation[]

  @@index([testCaseId])
}

// ============================================
// ANNOTATIONS
// ============================================

model Annotation {
  id           String         @id @default(cuid())
  screenshotId String
  type         AnnotationType
  x            Float // Normalized 0-1
  y            Float // Normalized 0-1
  width        Float? // For rectangle
  height       Float? // For rectangle
  radius       Float? // For circle
  points       Json? // For arrow: [startX, startY, endX, endY]
  stroke       String         @default("#EF4444")
  strokeWidth  Float          @default(2)
  fill         String?
  order        Int            @default(0)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  screenshot Screenshot  @relation(fields: [screenshotId], references: [id], onDelete: Cascade)
  testCases  TestCase[] // Many-to-many: one annotation can link to multiple test cases

  @@index([screenshotId])
}

model Comment {
  id         String   @id @default(cuid())
  testCaseId String
  authorId   String
  content    String   @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  testCase TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  author   User     @relation(fields: [authorId], references: [id])

  @@index([testCaseId])
  @@index([authorId])
}

model Attachment {
  id         String   @id @default(cuid())
  testCaseId String
  fileName   String
  fileUrl    String
  s3Key      String
  fileSize   Int
  mimeType   String
  createdAt  DateTime @default(now())

  testCase TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)

  @@index([testCaseId])
}

// ============================================
// AUDIT LOGGING
// ============================================

model AuditLog {
  id         String      @id @default(cuid())
  testCaseId String
  userId     String
  action     AuditAction
  details    Json        @default("{}") // Old/new values
  createdAt  DateTime    @default(now())

  testCase TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id])

  @@index([testCaseId])
  @@index([userId])
  @@index([createdAt])
}

// ============================================
// INTEGRATIONS
// ============================================

model Integration {
  id             String          @id @default(cuid())
  organizationId String
  type           IntegrationType
  accessToken    String?         @db.Text // Encrypted
  refreshToken   String?         @db.Text // Encrypted
  tokenExpiresAt DateTime?
  config         Json            @default("{}") // Workspace/project mapping
  isActive       Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, type])
  @@index([organizationId])
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id        String              @id @default(cuid())
  userId    String
  type      String // testcase_assigned, testcase_commented, status_changed
  title     String
  message   String
  data      Json                @default("{}") // { testCaseId, projectId, etc. }
  channel   NotificationChannel @default(IN_APP)
  isRead    Boolean             @default(false)
  readAt    DateTime?
  createdAt DateTime            @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}

model NotificationPreference {
  id             String              @id @default(cuid())
  userId         String
  organizationId String?
  eventType      String // testcase_assigned, testcase_commented, etc.
  channel        NotificationChannel
  isEnabled      Boolean             @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId, eventType, channel])
  @@index([userId])
}
