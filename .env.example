# BugLens Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/buglens"

# ===========================================
# NEXTAUTH
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl-rand-base64-32"

# ===========================================
# OAUTH PROVIDERS
# ===========================================
# Google OAuth
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Microsoft Azure AD
# Create at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
AZURE_AD_CLIENT_ID=""
AZURE_AD_CLIENT_SECRET=""
AZURE_AD_TENANT_ID="common"

# ===========================================
# AWS S3 & CLOUDFRONT
# ===========================================
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="buglens-uploads"
AWS_CLOUDFRONT_DOMAIN=""  # Optional: your.cloudfront.net

# ===========================================
# REDIS (for BullMQ)
# ===========================================
# For local development
REDIS_URL="redis://localhost:6379"

# For Vercel + Upstash (get from Upstash console - use the redis:// URL, not REST)
# REDIS_URL="rediss://default:xxx@xxx.upstash.io:6379"

# Upstash REST API (auto-added by Vercel integration)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ===========================================
# LIVEBLOCKS (Real-time collaboration)
# ===========================================
# Get from: https://liveblocks.io/dashboard
LIVEBLOCKS_SECRET_KEY=""
NEXT_PUBLIC_LIVEBLOCKS_PUBLIC_KEY=""

# ===========================================
# EMAIL (Resend)
# ===========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=""
EMAIL_FROM="BugLens <noreply@yourdomain.com>"

# ===========================================
# SLACK INTEGRATION
# ===========================================
# Slack uses webhook URLs configured per organization
# No global env vars needed - webhooks are stored per org in the database

# ===========================================
# MICROSOFT TEAMS INTEGRATION
# ===========================================
# Teams uses webhook URLs configured per organization
# No global env vars needed

# ===========================================
# JIRA INTEGRATION
# ===========================================
# Create at: https://developer.atlassian.com/console/myapps/
JIRA_CLIENT_ID=""
JIRA_CLIENT_SECRET=""

# ===========================================
# TRELLO INTEGRATION
# ===========================================
# Get from: https://trello.com/power-ups/admin
TRELLO_API_KEY=""
TRELLO_API_SECRET=""

# ===========================================
# AZURE DEVOPS INTEGRATION
# ===========================================
# Create at: https://app.vsaex.visualstudio.com/app/register
AZURE_DEVOPS_CLIENT_ID=""
AZURE_DEVOPS_CLIENT_SECRET=""

# ===========================================
# OPTIONAL: ANALYTICS & MONITORING
# ===========================================
# Sentry
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Vercel Analytics (auto-configured on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="BugLens"
